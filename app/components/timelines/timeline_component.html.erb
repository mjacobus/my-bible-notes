<h3> <%= timeline.name %></h3>

<svg width="<%= helper.width %>" height="<%= helper.height %>" version="1.1" xmlns="http://www.w3.org/2000/svg">
  <% helper.years_to_display.each do |year| %>
    <a href="#<%= year %>" class="<%= bem('year') %>" data-bs-placement="bottom">
      <line 
        x1="<%= helper.year_x(year) %>" 
        x2="<%= helper.year_x(year) %>" 
        y1="1" 
        y2="<%= helper.height %>" 
        stroke="#ddd" 
        stroke-width="1"
        />
    </a>
  <% end %>

  <% helper.renderable_events.each do |element| %>
    <%= render Timelines::Timeline::EventComponent.new(element: element) %>
  <% end %>
</svg>
