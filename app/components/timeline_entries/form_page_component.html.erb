<%= render breadcrumb  %>
<%= render flash  %>

<%= simple_form_for(entry, url: url, as: :entry) do |f| %>
  <%= input_wrapper do %>
    <%= f.input :title %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :from_year %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :from_precision, as: :select, collection: precisions, include_blank: true %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :from_date_complement %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :to_year %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :to_precision, as: :select, collection: precisions, include_blank: true %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :to_date_complement %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :explanation %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :confirmed %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.submit(class: 'btn btn-primary mt-3 float-right') %>
  <% end %>
<% end %>
