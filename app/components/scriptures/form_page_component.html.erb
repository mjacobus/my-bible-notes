<%= render breadcrumb  %>
<%= render flash  %>

<%= simple_form_for(form, url: form.target_url, as: form.param_key) do |f| %>
  <%= input_wrapper do %>
    <%= f.input :title, label: t('app.attributes.title') %>
  <% end %>
  <%= input_wrapper do %>
    <%= book_input(f) %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :verses, label: t('app.attributes.verses') %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :description, as: :text, label: t('app.attributes.description') %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :sequence_number, label: t('app.attributes.sequence_number') %>
  <% end %>

  <% unless form.record.id %>
      <%= f.input :parent_id, as: :hidden %>
  <% end %>

  <%= render InputElements::TagsInputComponent.new(
    form_builder: f,
    form: form,
    name: :tags_string,
    profile_owner: profile_owner
  ) %>

  <%= input_wrapper do %>
    <%= submit_button(f) %>
  <% end %>
<% end %>

