<%= render breadcrumb  %>
<%= render flash  %>

<%= simple_form_for(record, url: url, as: form_key) do |f| %>
  <%= input_wrapper do %>
    <%= f.input :title %>
  <% end %>
  <%= input_wrapper do %>
    <%= book_input(f) %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :verses %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :description, as: :text %>
  <% end %>
  <%= input_wrapper do %>
    <%= submit_button(f) %>
  <% end %>
<% end %>

