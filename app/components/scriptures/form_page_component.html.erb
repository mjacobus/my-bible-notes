<%= render breadcrumb  %>
<%= render flash  %>

<%= simple_form_for(form, url: form.target_url, as: form.param_key) do |f| %>
  <%= input_wrapper do %>
    <%= f.input :title %>
  <% end %>
  <%= input_wrapper do %>
    <%= book_input(f) %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :verses %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :description, as: :text %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :parent_id, as: :hidden, input_html: { value: form.parent_id || params[:parent_id] } %>
  <% end %>

  <%= render InputElements::TagsInputComponent.new(form_builder: f, form: form, name: :tags_string) %>

  <%= input_wrapper do %>
    <%= submit_button(f) %>
  <% end %>
<% end %>

