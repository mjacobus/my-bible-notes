<%= render breadcrumb  %>
<%= render flash  %>

<%= simple_form_for(scripture, url: url, as: :scripture) do |f| %>
  <%= input_wrapper do %>
    <%= f.input :title %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :book %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :verses %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.input :description, as: :text %>
  <% end %>
  <%= input_wrapper do %>
    <%= f.submit(class: 'btn btn-primary mt-3 float-right') %>
  <% end %>
<% end %>

